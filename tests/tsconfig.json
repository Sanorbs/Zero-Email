{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "outDir": "./dist",
      "rootDir": "../",
      "baseUrl": ".",
      "paths": {
        "@shared/*": ["shared/*"] 
      },
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "types": ["jest", "node"]
    },
    "include": ["src/**/*", "../shared/**/*", "tests/**/*"],
    "exclude": ["node_modules"]
  }